{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "es2015",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*",
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}